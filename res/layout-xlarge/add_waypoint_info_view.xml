<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dbdbdb">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="0.55"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/editWaypointInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="40dp"
            android:text="Edit Waypoint"
            android:textSize="60sp" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="Filler text to take up space.This is just a test. Not actual text that will be used. Filler text to take up space. This is just a test.Not actual text that will be used."
            android:textSize="30sp" >

        </EditText>

        <EditText
            android:id="@+id/latitudeEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/latitudeText"
            android:layout_marginTop="30dp"
            android:text="9883.2834"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/longitudeEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/longitudeText"
            android:layout_marginTop="30dp"
            android:text="9883.2834"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/longitudeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/latitudeEdit"
            android:layout_marginTop="70dp"
            android:text="Longitude:"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/latitudeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/editText1"
            android:layout_marginTop="70dp"
            android:text="Latitude:"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editText1"
            android:layout_alignParentLeft="true"
            android:text="Waypoint description:"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/WaypointNameE"
            android:layout_width="490dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/TextView01"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="70dp"
            android:ems="10"
            android:text="Singleton Park Trail"
            android:textSize="30sp" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/WaypointNameT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/WaypointNameE"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="30dp"
            android:text="Waypoint name:"
            android:textSize="30sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="20dp" >

        <Button
            android:id="@+id/uploadMedia"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@+id/textView1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_background"
            android:text="Upload Media"
            android:textSize="25sp" />

        <Button
            android:id="@+id/browseMedia"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/textView1"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_background"
            android:text="Browse"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="" />

    </RelativeLayout>

</LinearLayout>