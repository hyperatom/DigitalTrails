<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dbdbdb"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/currentLocation"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.34"
        android:gravity="center"
        android:text="Home Page"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_margin="10dp"
        android:layout_weight="0.32"
        android:orientation="vertical" >

        <Button
            android:id="@+id/myWalks"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_background"
            android:onClick="walkOptionButton"
            android:padding="20dp"
            android:text="My Walks"
            android:textSize="30sp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/viewWalks"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_background"
            android:onClick="viewWalkButton"
            android:padding="20dp"
            android:text="Saved Walks"
            android:textSize="30sp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/searchWalks"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:onClick="searchButton"
            android:padding="20dp"
            android:text="Download Walks"
            android:textSize="30sp" />

        <Button
            android:id="@+id/explore"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:onClick="exploreButton"
            android:padding="20dp"
            android:text="Explore"
            android:textSize="30sp" />

    </LinearLayout>

</LinearLayout>