<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dbdbdb"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.6"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/currentLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="Home Page"
            android:textSize="40sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="340dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/currentLocation"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:columnCount="2"
            android:rowCount="2" >

            <Button
                android:id="@+id/explore"
                android:layout_width="400dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/map_nott"
                android:onClick="exploreButton"
                android:padding="20dp"
                android:text="Explore"
                android:textSize="30sp" />

            <Button
                android:id="@+id/myWalks"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_above="@+id/explore"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_background"
                android:onClick="walkOptionButton"
                android:padding="20dp"
                android:text="My Walks"
                android:textSize="30sp" />

            <Button
                android:id="@+id/searchWalks"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_above="@+id/myWalks"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_background"
                android:onClick="searchButton"
                android:padding="20dp"
                android:text="Download Walks"
                android:textSize="30sp" />

            <Button
                android:id="@+id/viewWalks"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_above="@+id/searchWalks"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_background"
                android:onClick="viewWalkButton"
                android:padding="20dp"
                android:text="Saved Walks"
                android:textSize="30sp" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>