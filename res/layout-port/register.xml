<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Welcome to White\nRock Nature Trails"
        android:gravity="center"
        android:textSize="50sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <Button
            android:id="@+id/login"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/button_background"
            android:onClick="registerButton"
            android:text="Register"
            android:textSize="25sp" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/button_background"
            android:onClick="cancelRButton"
            android:text="Cancel"
            android:textSize="25sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="200dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/fullnamee"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/fullnamet"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Full name"
            android:textSize="20sp" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/emaile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/fullnamee"
            android:layout_below="@+id/fullnamee"
            android:layout_marginTop="50dp"
            android:text="Please enter your email address"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/emailt"
            android:layout_width="490dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/emaile"
            android:layout_alignRight="@+id/fullnamee"
            android:layout_below="@+id/emaile"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Email"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/passwordt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/emailt"
            android:layout_below="@+id/emailt"
            android:layout_marginTop="50dp"
            android:text="Please create a user password"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/passworde"
            android:layout_width="490dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/passwordt"
            android:layout_alignRight="@+id/emailt"
            android:layout_below="@+id/passwordt"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Password"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/confirmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/passworde"
            android:layout_below="@+id/passworde"
            android:layout_marginTop="50dp"
            android:text="Please confirm your password"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/confirme"
            android:layout_width="490dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/confirmt"
            android:layout_alignRight="@+id/passworde"
            android:layout_below="@+id/confirmt"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Password"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fullnamet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Please enter your full name"
            android:textSize="20dp" />

    </RelativeLayout>

</RelativeLayout>