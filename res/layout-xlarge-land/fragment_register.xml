<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dbdbdb" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.59"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Welcome to White Rock Nature Trails"
            android:textSize="60sp" />

        <EditText
            android:id="@+id/fullnamee"
            android:layout_width="490dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/welcome"
            android:layout_alignRight="@+id/welcome"
            android:layout_below="@+id/fullnamet"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Full name"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/emaile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/fullnamee"
            android:layout_below="@+id/fullnamee"
            android:layout_marginTop="40dp"
            android:text="Please enter your email address"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/emailt"
            android:layout_width="490dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/emaile"
            android:layout_alignRight="@+id/fullnamee"
            android:layout_below="@+id/emaile"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Email"
            android:textSize="25sp" >

        </EditText>

        <TextView
            android:id="@+id/passwordt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/emailt"
            android:layout_below="@+id/emailt"
            android:layout_marginTop="40dp"
            android:text="Please create a user password"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/passworde"
            android:layout_width="490dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/passwordt"
            android:layout_alignRight="@+id/emailt"
            android:layout_below="@+id/passwordt"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Password"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/confirmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/passworde"
            android:layout_below="@+id/passworde"
            android:layout_marginTop="40dp"
            android:text="Please confirm your password"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/confirme"
            android:layout_width="490dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/confirmt"
            android:layout_alignRight="@+id/passworde"
            android:layout_below="@+id/confirmt"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Password"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/fullnamet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/fullnamee"
            android:layout_below="@+id/welcome"
            android:layout_marginTop="40dp"
            android:text="Please enter your full name"
            android:textSize="25sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp" >

        <Button
            android:id="@+id/login"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/button_background"
            android:onClick="registerButton"
            android:text="@string/register"
            android:textSize="30sp" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/button_background"
            android:onClick="cancelButton"
            android:text="@string/cancel"
            android:textSize="30sp" />
        
    </RelativeLayout>

</LinearLayout>